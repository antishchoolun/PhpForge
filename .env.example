# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/PhpForge

# Database Configuration
DB_HOST=localhost
DB_NAME=phpforge
DB_USER=root
DB_PASS=

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
MAIL_FROM_ADDRESS=noreply@phpforge.com
MAIL_FROM_NAME="PhpForge"

# Groq AI API
GROQ_API_KEY=your_groq_api_key
GROQ_API_URL=https://api.groq.com/v1

# Security
SESSION_SECURE=false
SESSION_LIFETIME=7200
PASSWORD_MIN_LENGTH=8
API_RATE_LIMIT=60

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=phpforge_
CACHE_TTL=3600